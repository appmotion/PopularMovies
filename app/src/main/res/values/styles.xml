<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="android:textColorSecondary">@color/textColorSecondary</item>
    <!-- Used for settings preference theme -->
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <!-- action bar with logo -->
  <style name="ActionBar.Solid.Movie.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="displayOptions">useLogo|showHome</item>
    <item name="logo">@drawable/ic_action_favorite</item>
  </style>

  <style name="AppTheme.Movie" parent="@style/AppTheme">
    <!-- <item name="actionBarStyle">@style/ActionBar.Solid.Movie.NoTitle</item> -->
  </style>

</resources>
