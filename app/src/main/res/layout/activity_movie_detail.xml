<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.appmotion.popularmovies.MovieDetailActivity"
    >

  <TextView
      android:id="@+id/tv_movie_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/holo_blue_light"
      android:gravity="center_vertical"
      android:minHeight="64dp"
      android:paddingLeft="16dp"
      android:text="Title"
      android:textColor="@android:color/white"
      android:textSize="34sp"
      />

  <ScrollView
      android:id="@+id/sv_movie_detail_scroller"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        >

      <!-- Container for Movie Image and General Movie Description  -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="24dp"
          android:orientation="horizontal"
          android:weightSum="1.0"
          >

        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_empty"
            />

        <!-- Container for General Movie Description  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            >

          <TextView
              android:id="@+id/tv_movie_year"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Year"
              style="@style/TextAppearance.AppCompat.Large"
              />

          <TextView
              android:id="@+id/tv_movie_duration"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:layout_marginTop="8dp"
              android:text="Duration"
              android:textStyle="italic"
              style="@style/TextAppearance.AppCompat.Medium"
              />

          <TextView
              android:id="@+id/tv_movie_rating"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Rating"
              style="@style/TextAppearance.AppCompat.Small"
              />

        </LinearLayout>

      </LinearLayout>

      <TextView
          android:id="@+id/tv_movie_overview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Plot synopsis"
          style="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

  </ScrollView>

</LinearLayout>
